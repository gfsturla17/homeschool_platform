{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "target": "es2016",
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}


